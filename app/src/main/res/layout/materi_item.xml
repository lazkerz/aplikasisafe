<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/card_kerja"
        android:gravity="center_vertical"
        android:padding="32dp">


        <LinearLayout
            android:layout_marginStart="8dp"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_kerja"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="BELAJAR FUNDAMENTAL HTML"
                android:textColor="@color/black"
                android:textSize="16sp"
                android:textStyle="bold" />

            <TextView
                android:layout_marginTop="8dp"
                android:id="@+id/tv_desc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="HTML adalah bahasa markup standar untuk \nmembuat halaman website. Bahasa ini \nberfungsi untuk membuat struktur website \nhingga menyusun format teks dan gambar \npada halaman web."
                android:textColor="@color/black"
                android:textSize="12sp" />
        </LinearLayout>



        <LinearLayout
            android:layout_marginStart="16dp"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ImageView
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_save"/>
            <ImageView
                android:layout_marginTop="64dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_arrow"/>

        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>