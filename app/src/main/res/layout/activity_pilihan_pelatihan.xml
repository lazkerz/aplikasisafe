<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PilihanPelatihanActivity">
    <LinearLayout
        android:id="@+id/bar_temaPelatihan"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:padding="16dp"
        android:background="@color/grey_light"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:layout_gravity="center"
            android:id="@+id/backPilihanPelatihan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="76dp"
            android:src="@drawable/ic_back" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:fontFamily="@font/poppins_semibold"
            android:text="Pelatihan untuk Anda"
            android:layout_marginEnd="56dp"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_infoo" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:gravity="center"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/bar_temaPelatihan">

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_pelatihan1"
            android:layout_width="140dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="40dp"
            android:background="@drawable/btn_ya"
            android:textColor="@color/white"
            android:text="Pelatihan"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/space1" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_simpan1"
            android:layout_width="140dp"
            android:layout_height="wrap_content"
            android:background="@drawable/btn_tidak"
            android:text="@string/simpan"
            android:textColor="@color/red"
            app:layout_constraintEnd_toStartOf="@+id/btn_simpan"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/space1" />
    </LinearLayout>

    <ScrollView
        android:padding="16dp"
        android:id="@+id/scroll_pelatihan"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="144dp"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout2"
        tools:layout_editor_absoluteX="-16dp">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_example"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="12dp"
            tools:listitem="@layout/kerja_item" />
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>